{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://learnx.example.com/schemas/teaching_session.schema.json",
  "title": "Teaching Session Schema",
  "description": "Schema for RAG instructor teaching sessions (for history tracking)",
  "type": "object",
  "additionalProperties": false,
  "required": ["session_id", "timestamp", "question", "answer", "learner_level"],

  "$defs": {
    "iso_datetime": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 datetime"
    },
    "learner_level": {
      "type": "string",
      "enum": ["novice", "beginner", "intermediate", "advanced", "expert"],
      "description": "Learner's mastery level"
    },
    "citation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["source", "content"],
      "properties": {
        "source": {
          "type": "string",
          "minLength": 1,
          "maxLength": 500,
          "description": "Source document name or title"
        },
        "url": {
          "type": ["string", "null"],
          "format": "uri",
          "description": "Original URL to the source (if available)"
        },
        "source_type": {
          "type": ["string", "null"],
          "enum": ["wikipedia", "book", "article", "video", "website", "course", "tutorial", "paper", "document", null],
          "description": "Type of source for proper formatting"
        },
        "page": {
          "type": ["integer", "null"],
          "minimum": 1,
          "description": "Page number if applicable"
        },
        "filepath": {
          "type": ["string", "null"],
          "description": "Internal file path (not shown to user)"
        },
        "content": {
          "type": "string",
          "minLength": 1,
          "description": "Brief excerpt from source"
        }
      }
    }
  },

  "properties": {
    "session_id": {
      "type": "string",
      "pattern": "^ts-[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "description": "Unique teaching session ID (UUID v4 format with 'ts-' prefix)"
    },

    "timestamp": {
      "$ref": "#/$defs/iso_datetime",
      "description": "When the teaching session occurred"
    },

    "learner_id": {
      "type": ["string", "null"],
      "pattern": "^learner-[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "description": "Optional reference to learner profile"
    },

    "syllabus_id": {
      "type": ["string", "null"],
      "minLength": 1,
      "description": "Optional reference to syllabus (from Phase 1)"
    },

    "module_id": {
      "type": ["string", "null"],
      "pattern": "^m[0-9]{2}-[a-z0-9-]+$",
      "description": "Optional reference to syllabus module (from Phase 1)"
    },

    "topic_id": {
      "type": ["string", "null"],
      "minLength": 1,
      "description": "Optional reference to specific topic within a module"
    },

    "lesson_id": {
      "type": ["string", "null"],
      "minLength": 1,
      "description": "Optional reference to specific lesson within a topic"
    },

    "question": {
      "type": "string",
      "minLength": 1,
      "maxLength": 5000,
      "description": "Student's question or topic"
    },

    "answer": {
      "type": "string",
      "minLength": 1,
      "description": "Instructor's response"
    },

    "learner_level": {
      "$ref": "#/$defs/learner_level",
      "description": "Learner's level for this session"
    },

    "citations": {
      "type": "array",
      "maxItems": 20,
      "items": {
        "$ref": "#/$defs/citation"
      },
      "description": "Citations used in the answer"
    },

    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Confidence score for the answer"
    },

    "model": {
      "type": ["string", "null"],
      "minLength": 1,
      "description": "LLM model used for generation (for reproducibility)"
    },

    "rag_config": {
      "type": ["object", "null"],
      "additionalProperties": true,
      "description": "RAG configuration used (top_k, min_similarity, etc.)"
    },

    "evaluation": {
      "type": ["object", "null"],
      "additionalProperties": false,
      "properties": {
        "helpful": {
          "type": ["boolean", "null"],
          "description": "Whether the learner found the answer helpful"
        },
        "accurate": {
          "type": ["boolean", "null"],
          "description": "Whether the answer was accurate"
        },
        "rating": {
          "type": ["integer", "null"],
          "minimum": 1,
          "maximum": 5,
          "description": "Learner's rating (1-5 stars)"
        },
        "feedback": {
          "type": ["string", "null"],
          "description": "Optional learner feedback"
        }
      },
      "description": "Optional learner evaluation of the session"
    },

    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "description": "Additional metadata (topic filters, etc.)"
    }
  }
}
